<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>

        <variable
            name="Status"
            type="zhangtao.com.MvvmDemo.entity.Status" />
    </data>
    <RelativeLayout
        android:id="@+id/comment_layout_all_before"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_logo_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#f7fbff"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comment_left_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />


            <TextView
                android:id="@+id/comment_id_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:textColor="#0081CC" />

            <TextView
                android:id="@+id/comment_content_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/comment_id_tv1"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>
    </RelativeLayout>
</layout>